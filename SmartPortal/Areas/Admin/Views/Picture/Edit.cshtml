@model SmartPortal.Models.Picture
@{
    ViewBag.Title = "修改图片";
}
<!-- Page title -->
@Html.Partial("Custom/PageTitle")
<!-- End of Page title -->
<!-- Page content -->
<div id="page">
    <!-- Wrapper -->
    <div class="wrapper">
        <!-- 左边分部小节开始 -->
        <section class="column width6 first">
            <h3>功能简介</h3>
            <div class="box box-info">
                上传替换图片资源。
            </div>
            <form id="from" name="from" method="post" action="@Url.Action("Edit")" enctype="multipart/form-data" accept-charset="utf-8">
                <fieldset>
                    <legend>图片信息</legend>
                    <p>
                        <label for="">选择图片：</label><br />
                        <input type="file" id="UploadImg" name="UploadImg" class="full" />
                        <input type="text" id="PictureSrc" name="PictureSrc" class="full" value="@Model.PictureSrc" />
                    </p>
                    <p>
                        <label for="">摘要描述：</label><br />
                        <textarea id="Summary" name="Summary" class="large full" style="height: 50px;">@Model.Summary</textarea>
                    </p>
                    <p>
                        <label for="">类别：</label><br />
                        @Html.DropDownList("Category",new List<SelectListItem> { new SelectListItem { Value = "1", Text = "首页banner" }, new SelectListItem { Value = "1", Text = "首页banner"  } },Model.Category)
                    </p>
                    <p>
                        <label for="">排序号：</label><br />
                        <input type="text" id="SortNum" name="SortNum" class="full" value="@Model.SortNum" />
                    </p>
                    <p>
                        @Html.CheckBox("Enabled", Model.Enabled)
                        <label> 是否启用</label>
                    </p>

                    <p class="box">
                        <input type="submit" class="btn btn-green big" value="保存" />
                        或 <a href="@Url.Action("Index")" class="btn big">取消</a>
                    </p>
                </fieldset>
            </form>
        </section>
        <!-- 左边分部小节结束 -->
        <!-- 右边分部小节开始 -->
        <aside class="column width2">
            <!--快捷菜单-->
            @Html.Partial("Custom/QuickMenu", (List<SmartPortal.Models.Custom.QuickMenu>)ViewBag.QMenu)
            <!--实用的提示信息-->
            @Html.Partial("Custom/Tips", (SmartPortal.Models.Custom.Tips)ViewBag.Tip)
        </aside>
        <!-- 右边分部小节结束 -->
    </div>
    <!-- End of Wrapper -->
</div>
<!-- End of Page content -->

