@model  IEnumerable<SmartPortal.Models.Picture>
@{
    ViewBag.Title = "图片管理";
}
<!-- Page title -->
@Html.Partial("Custom/PageTitle")
<!-- End of Page title -->
<!-- Page content -->
<div id="page">
    <!-- Wrapper -->
    <div class="wrapper">
        <!-- 左边分部小节开始 -->
        <section class="column width6 first">
            <h3>功能简介</h3>
            <div class="box box-info">
                管理网站上传的图片文件。
            </div>
            <!--用户列表开始-->
            <h3>图片列表</h3>
            <table class="display stylized" id="example">
                <thead>
                    <tr>
                        <th>排列序号</th>
                        <th>图片地址</th>
                        <th>图片分类</th>
                        <th>是否启用</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pic in Model)
                    {
                    <tr class="gradeX">
                        <td>@pic.SortNum </td>
                        <td>@pic.PictureSrc </td>
                        <td>@(pic.Category == 1 ? "首页banner" : "站内资源" ) </td>
                        <td>@Html.CheckBox("Enabled", pic.Enabled, new { disabled = "disabled" })</td>
                        <td>
                            <a href="@Url.Action("Edit", new { id = pic.Id })">编辑</a>|
                            <a href="@Url.Action("Del", new { id = pic.Id })"> 删除</a>
                        </td>
                    </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>排列序号</th>
                        <th>图片地址</th>
                        <th>图片分类</th>
                        <th>是否启用</th>
                        <th>操作</th>
                    </tr>
                </tfoot>
            </table>
            <div class="clear">
                &nbsp;
            </div>
            <!--用户列表结束-->
        </section>
        <!-- 左边分部小节结束 -->
        <!-- 右边分部小节开始 -->
        <aside class="column width2">
            <!--快捷菜单-->
            @Html.Partial("Custom/QuickMenu", (List<SmartPortal.Models.Custom.QuickMenu>)ViewBag.QMenu)
            <!--实用的提示信息-->
            @Html.Partial("Custom/Tips", (SmartPortal.Models.Custom.Tips)ViewBag.Tip)
        </aside>
        <!-- 右边分部小节结束 -->
    </div>
    <!-- End of Wrapper -->
</div>
<!-- End of Page content -->
