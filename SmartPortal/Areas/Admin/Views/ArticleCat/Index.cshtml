@model IEnumerable<SmartPortal.Models.ArticleCat>
@{
    ViewBag.Title = "类目列表";
}
<!-- Page title -->
@Html.Partial("Custom/PageTitle")
<!-- End of Page title -->
<!-- Page content -->
<div id="page">
    <!-- Wrapper -->
    <div class="wrapper">
        <!-- 左边分部小节开始 -->
        <section class="column width6 first">
            <h3>功能简介</h3>
            <div class="box box-info">
                管理网站文章类目。
            </div>
            <!--文章列表开始-->
            <h3>文章列表</h3>
            <table class="display stylized" id="example">
                <thead>
                    <tr>
                        <th>类目名称</th>
                        <th>父级分类</th>
                        <th>排序</th>
                        <th>状态</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (SmartPortal.Models.ArticleCat entity in Model)
                    {
                        <tr>
                            <td>@entity.Name</td>
                            <td>@entity.IsParent</td>
                            <td>@entity.Order</td>
                            <td>@entity.Status</td>
                            <td>
                                <a href="@Url.Action("Edit?cid=")@entity.Cid">编辑</a>|
                                <a href="@Url.Action("Del?cid=")@entity.Cid">删除</a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>类目名称</th>
                        <th>父级分类</th>
                        <th>排序</th>
                        <th>状态</th>
                        <th>操作</th>
                    </tr>
                </tfoot>
            </table>
            <div class="clear">
                &nbsp;
            </div>
            <!--文章列表结束-->
        </section>
        <!-- 左边分部小节结束 -->
        <!-- 右边分部小节开始 -->
        <aside class="column width2">
            <!--快捷菜单-->
            @Html.Partial("Custom/QuickMenu", (List<SmartPortal.Models.Custom.QuickMenu>)ViewBag.QMenu)
            <!--实用的提示信息-->
            @Html.Partial("Custom/Tips", (SmartPortal.Models.Custom.Tips)ViewBag.Tip)
        </aside>
        <!-- 右边分部小节结束 -->
    </div>
    <!-- End of Wrapper -->
</div>
<!-- End of Page content -->
<script type="text/javascript">
    $(function () {
        /* datatable */
        $('#example').dataTable();
    });
</script>
