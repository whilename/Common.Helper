<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - @*网站后台管理系统V1.0*@</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="description" content="@ViewBag.Description" />
    <meta name="keywords" content="@ViewBag.Keywords" />

    <!--应用公共头文件-->
    @Html.Partial("_ReferenceHead")

    <script type="text/javascript" lang="zh-cn">
        $(function () {
            Administry.setup();
        });
    </script>
</head>
<body>
    <!-- Header -->
    <header id="top">
        <div class="wrapper">
            <!-- Title/Logo - can use text instead of image -->
            <div id="title">
                <img src="@Url.Content("~/Content/img/logo.png")" alt="Administry" />
            </div>
            <!--用户信息开始-->
            @Html.Partial("_UserInfo")
            <!--用户信息结束-->
            <!--导航菜单开始-->
            @Html.Partial("_Menu")
            <!--导航菜单结束-->
            <!-- Aside links -->
            <aside>
                <b>简体中文</b> &middot; 
                <a href="#">English</a>
            </aside>
            <!-- End of Aside links -->
        </div>
    </header>
    <!-- End of Header -->
    @RenderBody()
    <!-- Page footer -->
    <footer id="bottom">
        <div class="wrapper">
            <nav>
                <a href="@Url.Action("Index","Article")">文章管理</a>&middot;
                <a href="@Url.Action("Index","Product")">产品管理</a>&middot;
                <a href="@Url.Action("Index","Picture")">图片管理</a>&middot;
                <a href="@Url.Action("Index","Attachment")">附件管理</a>&middot;
                <a href="@Url.Action("Index","LeaveMessage")">留言管理</a>&middot;
                <a href="@Url.Action("Index","Contact")">联系方式</a>&middot;
                <a href="@Url.Action("Index","Link")">友情链接</a>
            </nav>
            <p>
                Copyright &copy; 2012 <b><a href="#" title="网站后台管理系统">网站后台管理系统</a></b> | Icons by
                <a href="#">SmartBooks</a>
            </p>
        </div>
    </footer>
    <!-- End of Page footer -->
    <!-- Animated footer -->
    <footer id="animated">
        <ul>
            <li><a href="@Url.Action("Index","Article")">文章管理</a></li>
            <li><a href="@Url.Action("Index","Product")">产品管理</a></li>
            <li><a href="@Url.Action("Index","Picture")">图片管理</a></li>
            <li><a href="@Url.Action("Index","Attachment")">附件管理</a></li>
            <li><a href="@Url.Action("Index","LeaveMessage")">留言管理</a></li>
            <li><a href="@Url.Action("Index","Contact")">联系方式</a></li>
            <li><a href="@Url.Action("Index","Link")">友情链接</a></li>
        </ul>
    </footer>
    <!-- End of Animated footer -->
    <!-- Scroll to top link -->
    <a href="#" id="totop">^滚动到顶部</a>
</body>
</html>
